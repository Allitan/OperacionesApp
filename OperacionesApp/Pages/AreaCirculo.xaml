<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Pages.AreaCirculo"
             Title="AreaCirculo">
    <VerticalStackLayout Padding="30" Spacing="5">
        <Label Text="Ingrese el radio del circulo" VerticalOptions="Start" HorizontalOptions="Start" />
        <Entry x:Name="txtRadio" Placeholder="Radio" Keyboard="Numeric" />

        <Label Text="Resultado" VerticalOptions="Start" HorizontalOptions="Start" />
        <Entry x:Name="txtResultado" IsReadOnly="True" />

        <Button Text="Calcular" Background="Green" x:Name="btnCalcular" Clicked="btnCalcular_Clicked" />
        <Button Text="Limpiar" Background="Red" x:Name="btnLimpiar" Clicked="btnLimpiar_Clicked" />
    </VerticalStackLayout>
</ContentPage>